<div class="logins_container">
  <h1 class="logins_header">Welcome to AlbumMaker</h1>

  <div class="logins">
    <%= render "shared/errors" %>
    <div class="logins_border">
    <form action="<%= users_url %>" method="post" class="logins">
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <input type="text"
             placeholder=" username"
             name="user[username]"
             id="user_username"
             value="<%= @user.username %>">
      <br>

      <input type="password"
             placeholder=" password"
             name="user[password]"
             id="user_password"
             value="<%= @user.password %>">
      <br>
      <input class="login_submit_button" type="submit" value="Sign Up">

    </form>
    <div class="login_or">Or</div>
    <form action="<%= session_url %>" method="post">
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <input type="hidden" placeholder="username" name="user[username]" value="Guest" id="user_username">

      <input type="hidden" placeholder="password" name="user[password]" value="qwerty" id="user_password">

      <button class="guest_button">Sign in as Guest</button>
    </form>
  </div>
  </div>
  <div class="logins_switch">
    <%= link_to "Already signed up?", new_session_url %>
  </div>
</div>
